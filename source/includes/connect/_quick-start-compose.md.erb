```javascript
// For example, when you need multiple plugins usage, just combine them by EndpassComposePlugin

// If you are using modules or npm
import EndpassComposePlugin from '@endpass/connect/compose';
import EndpassOauthPlugin from '@endpass/connect/oauth';

// Insert your client ID here
const YOUR_CLIENT_ID = '';

// Scopes determine permissions requested from the user
const scopes = [
  'user:email:read',
  'user:phone:read',
];

// Initialize a new client instance
const connect = new EndpassComposePlugin({
  clientId: YOUR_CLIENT_ID,
  scopes,
  plugins: [
    EndpassOauthPlugin
  ]
});

// Call the client's request method with any API endpoint
connect.request('/user').then(console.log);

